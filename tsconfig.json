{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "types": ["webpack-env"],
    "paths": {
      "*": ["node_modules/*"],
      "@/*": ["src/*"],
      "@api/*": ["src/api/*"],
      "@components/*": ["src/Components/*"],
      "@prismaGenerated/*": ["prisma/generated/*"],
      "@hooks/*": ["src/hooks/*"],
      "@contexts/*": ["src/contexts/*"],
      "@assets/*": ["./assets/*"],
      "@types/*": ["src/@types/*"]
    }
  },
  "include": ["src/**/*", "api"]
}
